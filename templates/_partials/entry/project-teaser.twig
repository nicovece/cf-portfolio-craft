{% import '_macros' as macros %}
<article class="project-teaser flex flex-col gap-6" data-reveal-item>
	<h3 class="text-fs-base">
		<a href="{{ entry.url }}" class="inline-block border-b border-accent/50 hover:border-accent lg:leading-8">
			<strong>{{ entry.title }}</strong>
		</a>
		<span class="hidden lg:inline">-</span>
		<span class="block lg:inline">{{ entry.shortDescription }}</span>
	</h3>
	{% include '_modules/project-tech-stack' with {
		entry: entry,
		category: 'essential',
		wrapperClasses: 'font-fs-small flex flex-wrap gap-2 text-gray-400'
	} only %}
	{% if entry.description %}
		<div class="text-fs-small leading-relaxed">
			{{ entry.description }}
		</div>
	{% endif %}
	{% set image = entry.heroImage.one() %}
	{% if image %}
		<img
			src="{{
			image.getUrl({
				width: 1200,
				height: 800,
				mode: 'crop'
			})
			}}"
			srcset="{{ macros.srcSet(image, true, '3:2') }}"
			sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
			alt="{{ image.alt ? : image.title }}"
			class="project-teaser-image my-2 h-auto w-full md:w-1/2 lg:w-2/3"
			loading="lazy"
		/>
	{% endif %}
	<a href="{{ entry.url }}" class="link-inline text-fs-small m-0 border-accent/50 hover:border-accent">View Project</a>
</article>
