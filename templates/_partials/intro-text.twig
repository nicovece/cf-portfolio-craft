{#
  Intro Section Rich Text Styling
  Applies component classes to CKEditor content for intro sections
  Usage: {% include '_partials/intro-text' with { text: entry.introText } only %}
#}

{{
	text
		|retcon(
			[
				['removeEmpty', 'body > p, body > h1, body > h2'],
				[
					'attr',
					'body > p',
					{
						class: 'tagline',
						'data-reveal-item': '',
						'data-reveal-item-y': '80'
					},
					false
				],
				[
					'attr',
					'body > h1',
					{
						class: 'intro-text',
						'data-reveal-item': ''
					},
					false
				],
				[
					'attr',
					'body > h2',
					{
						class: 'intro-text mt-4',
						'data-reveal-item': ''
					},
					false
				],
				[
					'attr',
					'body > * > a, body a',
					{
						class: 'link-inline'
					},
					false
				],
				[
					'attr',
					'strong, b',
					{
						class: 'font-medium'
					},
					false
				],
				[
					'attr',
					'body > h1 > br',
					{
						class: 'line-break'
					},
					false
				]
			]
		)
		|raw
}}
