{% extends '_layouts/base.twig' %}

{% block title %}
	Projects - {{ siteName }}
{% endblock %}

{% block content %}
	<section class="section-intro section-max-width">
		<h1 class="intro-text">Here is something that distracted me from working on my portfolio</h1>
	</section>
	<div class="mx-auto mt-0">
		{% set projects = craft.entries().section('projects').orderBy('postDate DESC').all() %}
		{% if projects|length %}
			{% for project in projects %}
				{{ project.render() }}
			{% endfor %}
		{% else %}
			<p>
				No projects yet.
			</p>
		{% endif %}
	</div>
{% endblock %}
