<footer class="mt-auto border-t border-gray-200">
	<div class="mx-auto max-w-6xl px-4 py-6">
		<div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
			{# Copyright #}
			<p class="text-sm text-gray-500">
				&copy; {{ now|date('Y') }} {{ siteName }}
			</p>

			{# Social Links from Global Set #}
			{% if settings.socialLinks|length %}
				<ul class="flex items-center gap-4">
					{% for link in settings.socialLinks %}
						<li>
							<a
								href="{{ link.url }}"
								target="_blank"
								rel="noopener"
								class="text-sm text-gray-500 transition-colors hover:text-gray-900"
							>
								{{ link.platform|lower }}
							</a>
						</li>
					{% endfor %}
				</ul>
			{% endif %}
		</div>
	</div>
</footer>
